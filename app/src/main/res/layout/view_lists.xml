<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/view_lists"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:layout_height="wrap_content"
    app:layout_constrainedHeight="true"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="5dp"
    app:cardElevation="10dp">

    <!--1-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/item_postType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/edit_text_middle2"
            android:text="Lost/Found"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text_middle2"
            android:text="20/03/23"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:id="@+id/item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@drawable/edit_text_middle2"
            android:text="Melbourne"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle2"
            android:layout_marginTop="110dp"
            android:text="Name of object"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:id="@+id/item_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle2"
            android:text="0451174885"
            android:layout_marginTop="150dp"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle2"
            android:text="Item: "
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:layout_marginTop="160dp"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

        <TextView
            android:id="@+id/item_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle2"
            android:text="Details"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            android:textColor="@color/cadet_blue"
            android:backgroundTint="@color/white"
            android:textAlignment="center"
            android:padding="15dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>